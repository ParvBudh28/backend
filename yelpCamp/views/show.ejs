<%- include("partials/header") %>
<h1><%= campground.name %></h1>
<img src="<%= campground.image %>" alt="camp image" style="width:50%">
<p class="my-2">
    <h4 class="d-inline">Description - </h3>
    <%= campground.desc %>
</p>

<p>
    <a href="/" class="btn btn-primary">GO BACK</a>
</p>

<p>
    <a href="/campgrounds" class="btn btn-primary">View Campgrounds</a>
</p>

<p>
    <h4>Comments:</h4>
    <% campground.comments.forEach(function(comment){ %>
        <p>
            <%= comment.text %> -
            <strong>
                <%= comment.author %>
            </strong>
        </p>
    <% }); %>
</p>

<%- include("partials/footer") %>
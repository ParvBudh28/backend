<%- include("../partials/header") %>

<div class="text-center">
    <h1 class="my-5">Add new Camp!</h1>

    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-row justify-content-around">
            <div class="form-group col-md-4">
                <input type="text" class="form-control" name="campground[name]" value="<%= campground.name %>" required>
            </div>
        </div>
        <div class="form-row justify-content-around">
            <div class="form-group col-md-4">
                <input type="text" class="form-control" value="<%= campground.image %>" name="campground[image]" required>
            </div>
        </div>
        <div class="form-row justify-content-around">
            <div class="form-group col-md-4">
                <input type="text" class="form-control" value="<%= campground.desc %>" name="campground[desc]"
                    required>
            </div>
        </div>
        <div class="form-row justify-content-around">
            <div class="form-group col-md-4">
                <button class="btn btn-warning" style="width: 100%;" type="submit">Update</button>
            </div>
        </div>
    </form>

    <p>
        <a href="/" class="btn btn-primary">GO BACK</a>
    </p>

    <p>
        <a href="/campgrounds" class="btn btn-primary">View Campgrounds</a>
    </p>
</div>

<%- include("../partials/footer") %>
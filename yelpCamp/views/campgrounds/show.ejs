<%- include("../partials/header") %>
<div class="container text-center my-5">
    <h1><%= campground.name %></h1>
    <img src="<%= campground.image %>" class="img-fluid" alt="camp image">
    <p class="my-2">
        <h4 class="d-inline">Description - </h3>
            <%- campground.desc %>
    </p>
    <p>
        <em>
            ~~Created by <strong> <%= campground.author.username %> </strong>
        </em>
    </p>
    
    <a href="/campgrounds" class="btn btn-info">View Campgrounds</a>
    <a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-warning">Add Comment</a>
    
    <p>
        <h4>Comments:</h4>
        <% campground.comments.forEach(function(comment){ %>
        <p>
            <%= comment.text %> -
            <strong>
                <%= comment.author.username %>
            </strong>
        </p>
        <% }); %>
    </p>
</div>

<%- include("../partials/footer") %>
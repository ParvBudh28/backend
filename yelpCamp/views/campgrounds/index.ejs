<%- include("../partials/header") %>
    <div class="container-fluid my-5">
        <div class="jumbotron jumbotron-fluid border border-dark rounded-pill">
            <div class="container text-center">
                <h1>This is Campgrounds Page!</h1>
                <p class="lead">View our collection below</p>
                <a href="/">
                    <button type="button" class="btn btn-lg btn-danger mr-md-4 my-2" href="/">GO Back</button>
                </a>
                <a href="/campgrounds/new">
                    <button type="button" class="btn btn-lg btn-warning my-2" href="/campgrounds/new">Add new Campground</button>
                </a>
            </div>
        </div>
        
        <div class="row">
            <% for(i=0;i<campgrounds.length;i++){ %>
            <div class="col-md-4 mb-5 my-3">
                <div class="card">
                    <img src="<%= campgrounds[i].image %>" alt="image" style="width: 100%; height:250px;">
                    <div class="card-body">
                        <h4 class="text-center">
                            <%= campgrounds[i].name %>
                        </h4>
                    </div>
                    <a href="/campgrounds/<%= campgrounds[i]._id %>" class="text-center mb-4">
                        <button type="button" class="btn btn-success">Read More</button>
                    </a>
                </div>
            </div>
            <% } %>
        </div>
    </div>    

<%- include("../partials/footer") %>
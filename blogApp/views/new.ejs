<%- include("./partials/header") %>
<div class="container-fluid pt-5">
    <div class="container text-center" id="newPost">
        <h1 class="mb-3">New Post</h1>
        <form action="/blogs" method="post">
            <div class="form-group row justify-content-center">
                <div class="col-lg-6">
                    <input type="text" name="blog[title]" class="form-control form-control-sm" placeholder="blog title" required>
                </div>
            </div>
            <div class="form-group row justify-content-center">
                <div class="col-lg-6">
                    <input type="text" name="blog[image]" class="form-control form-control-sm" placeholder="blog image link" required>
                </div>
            </div>
            <div class="form-group row justify-content-center">
                <div class="col-lg-6">
                    <textarea class="form-control form-control-sm" name="blog[body]" placeholder="Blog content goes here :" rows="5"></textarea>
                </div>
            </div>
            <div class="row justify-content-center mb-5">
                <div class="col-lg-6">
                    <button type="submit" class="btn btn-block btn-outline-primary">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>

<%- include("./partials/footer") %>